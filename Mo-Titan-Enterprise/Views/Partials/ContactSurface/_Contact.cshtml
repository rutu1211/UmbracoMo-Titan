@inherits UmbracoViewPage<Mo_Titan_Enterprise.Model.ContactModel>

@using (Html.BeginUmbracoForm("SubmitForm", "ContactSurface", FormMethod.Post))
{
    @Html.AntiForgeryToken();
        <div class="col-md-6">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", @placeholder = "Enter your name" })
                @Html.ValidationMessageFor(m => m.Firstname,"", new {@class="body_error_color" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter email address" })
                @Html.ValidationMessageFor(m => m.Email,"", new {@class="body_error_color" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Enter Subject" })
                @Html.ValidationMessageFor(m => m.Subject,"", new {@class="body_error_color" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Enter Message" })
                @Html.ValidationMessageFor(m => m.Message,"", new {@class="body_error_color" })
            </div>
        </div>
        <div class="col-md-12 text-right">
            <button type="submit" value="submit" class="primary-btn">Send Message</button>
        </div>
}

